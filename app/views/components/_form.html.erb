<div class="container">
  <%= form_for([@component.page.project, @component.page, @component], html: { :multipart => true }) do |f| %>
    <% if @component.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@component.errors.count, "error") %> prohibited this component from being saved:</h2>

        <ul>
        <% @component.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
      Leave blank if you do not want to update.
    </div>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control", rows: "20" %>
    </div>
    <div class="actions">
      <%= f.submit 'Save', class: "btn btn-primary" %>
      <%= link_to 'Cancel', project_page_components_path, class: "btn btn-default" %>
    </div>
  <% end %>
</div><!-- .container -->
