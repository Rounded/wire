<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 class="pull-left"><%=@project.name %> Pages</h1>
  <p class="pull-right">
    <%= link_to 'New Page', new_project_page_path, class: "btn btn-default" %>
  </p>
  <div class="clearfix"></div>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= page.name %></td>
          <td><%= link_to 'Show Components', project_page_components_path(page.project, page) %></td>
          <td><%= link_to 'Destroy', project_page_path(page.project, page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div><!-- .container -->
